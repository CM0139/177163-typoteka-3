mixin preview-list(articles)
  ul.preview__list
    each article in articles
      li.preview__item.preview__item--noimage
        ul.preview__breadcrumbs
          li.preview__breadcrumbs-item
            if article.category
              each category in article.category
                a.preview__breadcrumbs-link(href=`/articles/${category}`) #{category}
        if article.picture
          .preview__background
            img.preview__background-image(src=`/img/${article.picture}` width='460' height='240')
        time.preview__time(datetime='#{article.createdDate}') #{article.createdDate.split('T')[0]}
        h3.preview__name
          a.preview__name-link(href=`/articles/${article.id}`) #{article.title}
        p.preview__text #{article.announce}
        a.preview__comment(href='#')
          | Комментарии 
          span.preview__cloud
          b.preview__comment-count #{article.comments.length}
